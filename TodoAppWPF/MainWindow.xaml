<Window x:Class="TodoAppWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoAppWPF"
        mc:Ignorable="d"
        Title="To-Do-App" Height="450" Width="500">
    <Grid>
        <TextBox Name="TaskTextBox" HorizontalAlignment="Left" 
                 Margin="10,10,0,0" VerticalAlignment="Top" 
                 Width="400" Height="30"
                 Background="Pink"
                 BorderBrush="Gray" BorderThickness="2"/>
                 
        
        <Button Name="AddButton" Content="Lägg tilluppgift" 
                Background="Gray" Foreground="White"
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="75" Height="30" Margin="420,10,0,0" Click="AddButton_Click"/>

        <ListBox Name="TasksListBox" HorizontalAlignment="Left" 
                 Height="200" Margin="10,50,0,0" VerticalAlignment="Top" 
                 Width="480" Background="Pink"
                 BorderBrush="Gray" BorderThickness="2"/>


        <Button Name="RemoveButton" Content="Ta bortuppgift" HorizontalAlignment="Left" 
                Background="Gray" Foreground="White"
                VerticalAlignment="Top" Width="75" Height="30" 
                Margin="420,260,0,0" Click="RemoveButton_Click"/>
        
        
    </Grid>
</Window>
